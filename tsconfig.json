{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2018",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,

    "lib": ["es2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
