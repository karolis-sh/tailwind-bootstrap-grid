{
  "name": "tailwind-bootstrap-grid",
  "version": "6.0.0",
  "description": "Tailwind CSS plugin to generate Bootstrap flexbox grid system.",
  "keywords": [
    "bootstrap",
    "flexbox",
    "grid",
    "grid system",
    "layout",
    "rtl",
    "tailwindcss"
  ],
  "repository": "karolis-sh/tailwind-bootstrap-grid",
  "license": "MIT",
  "author": "Karolis Å arapnickis <hi@karolis.sh>",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "build": "run-s build:lib build:demo",
    "build:lib": "tsc",
    "build:demo": "cd demo && vite build",
    "clean": "rm -rf build lib",
    "commit": "cz",
    "format": "run-p format:*",
    "format:js": "prettier --write .",
    "format:package-json": "sort-package-json",
    "lint": "run-p lint:*",
    "lint:types": "tsc --noEmit",
    "lint:js": "eslint . --cache",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!**/node_modules' '!**/CHANGELOG.md'",
    "qa": "run-p lint",
    "release": "npm i && run-s clean build qa && standard-version --no-verify && git push --follow-tags --no-verify && npm publish",
    "dev": "cd demo && vite",
    "try-demo": "run-s clean build && serve build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,jsx,mjs}": "eslint --fix",
    "*.{md,css,json,yml,toml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@k.sh/eslint-plugin": "^0.9.1",
    "@k.sh/prettier-config": "^0.5.0",
    "@mdx-js/rollup": "^3.1.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^22.15.18",
    "@vitejs/plugin-react": "^4.4.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-live": "^4.1.8",
    "serve": "^14.2.4",
    "sort-package-json": "^3.0.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "tailwindcss": "^4"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "volta": {
    "node": "24.0.2"
  }
}
